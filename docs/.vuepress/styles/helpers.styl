$spaces = (
  0: 0,
  xs: 5px,
  sm: 10px,
  md: 15px,
  lg: 20px,
  xl: 30px,
  xxl: 50px,
);

box-space($name, $value)
  .mar-a-{$name}
    margin: $value !important
  .mar-l-{$name}, .mar-x-{$name}
    margin-left: $value !important
  .mar-r-{$name}, .mar-x-{$name}
    margin-right: $value !important
  .mar-t-{$name}, .mar-y-{$name}
    margin-top: $value !important
  .mar-b-{$name}, .mar-y-{$name}
    margin-bottom: $value !important
  .pad-a-{$name}
    padding: $value !important
  .pad-l-{$name}, .pad-x-{$name}
    padding-left: $value !important
  .pad-r-{$name}, .pad-x-{$name}
    padding-right: $value !important
  .pad-t-{$name}, .pad-y-{$name}
    padding-top: $value !important
  .pad-b-{$name}, .pad-y-{$name}
    padding-bottom: $value !important

for $name, $value in $spaces
  box-space($name, $value)

.fn-flex, .flex-ys-stretch, .flex-ys-around, .flex-ys-between, .flex-ys-center, .flex-ys-end, .flex-ys-start, .flex-y-stretch, .flex-y-baseline, .flex-y-center, .flex-y-end, .flex-y-start, .flex-x-around, .flex-x-between, .flex-x-center, .flex-x-end, .flex-x-start, .flex-column 
  display flex
  min-width 0
.flex-0 
  flex none
.flex-1 
  flex 1
  min-width 0
.flex-2 
  flex 2
  min-width 0
.flex-3 
  flex 3
  min-width 0

.flex-column 
  flex-flow column
// 水平左对齐
.flex-x-start 
  justify-content flex-start
// 水平右对齐
.flex-x-end 
  justify-content flex-end
// 水平居中对齐
.flex-x-center 
  justify-content center
// 水平两端对齐
.flex-x-between 
  justify-content space-between
// 水平分散对齐
.flex-x-around 
  justify-content space-around
// 垂直顶部对齐
.flex-y-start 
  align-items start
// 垂直底部对齐
.flex-y-end 
  align-items end
// 垂直居中对齐
.flex-y-center 
  align-items center
// 垂直基线对齐
.flex-y-baseline 
  align-items baseline
// 垂直填充
.flex-y-stretch 
  align-items stretch
// 多行垂直顶部对齐
.flex-ys-start 
  align-content flex-start
// 多行垂直底部对齐
.flex-ys-end 
  align-content flex-end
// 多行垂直居中对齐
.flex-ys-center 
  align-content center
// 多行垂直分散对齐-上下贴边
.flex-ys-between 
  align-content space-between
// 多行垂直分散对齐-上下空隙
.flex-ys-around 
  align-content space-around
// 多行垂直分散对齐-上贴边
.flex-ys-stretch 
  align-content stretch


.fill-w
  width: 100% !important;

.fill-h
  height: 100% !important;

.fill-a
  @extend .fill-w;
  @extend .fill-h;

// 宽高自适应
.auto-w
  width: auto;

.auto-h
  height: auto;

.auto-a
  @extend .auto-w;
  @extend .auto-h;

